<% if @profile.errors.any? %>
<div class="container item-margin margin-top">
  <div class="row">
    <div class="col-12 bg-danger text-light text-center font-weight-bold"><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</div>

    <% @profile.errors.full_messages.each do |message| %>
    <div class="col-12 alert margin-0 font-weight-bold"><%= message %></div>
    <% end %>

  </div>
</div>
<% end %>

<div class="container">
  <div class="row  items-margin bg-color rounded box-shadow">
    <div class="col-12 text-l text-light bg-primary font-weigth-bold">
      Your Profile
    </div>


<%= form_with model: @profile, local: true, class:"container-fluid" do |form| %>

<div class="col-12 items-margin">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, id: 'profile_first_name', class: 'form-control' %>
</div>

<div class="col-12 items-margin">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, id: 'profile_last_name',  class: 'form-control' %>
</div>

<div class="col-12 items-margin">
  <%= form.label :image %>
  <%= form.file_field :image, id: 'profile_image' %>
</div>

<div class="col-12 items-margin">
  <%= form.label :nationality %>
  <%= form.country_select :nationality, id: 'profile_nationality',  class: 'form-control' %>
</div>

<div class="col-12 items-margin">
  <%= form.label :city, "Your current area" %>
  <%= form.text_field :city, id: 'profile_city',  class: 'form-control', placeholder: 'city name' %>
</div>


<div class="row items-margin justify-content-center">
  <%= button_tag "style", class: 'btn btn-outline-primary col-8 text-center' do %>
  <%= fa_icon 'user', text:'Create' %>
  <% end %>
</div>
<% end %>

</div>
</div>
